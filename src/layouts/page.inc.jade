mixin menu(menuItems, maxLevel)
    - maxLevel = maxLevel || 100
    - menuItems = filter(menuItems)
    if menuItems.length
        ul.nav
            each item in menuItems
                li(class=[item.state, item.children && item.children.length ? 'hasChildren' : null])
                    div
                        a(href=item.url)= item.title
                    unless maxLevel == 1
                        if item.state != false
                            +menu(item.children, maxLevel--)

html
    head
        meta(charset="utf-8")
        title= getPreparedTitle()
        != getBlock('meta').toHTML()
        != getBlock('styles').add(['/styles/style.css']).toHTML()
    body(class=getDocument().meta.get('pageClass'))
        aside
            div
                header
                    a(href='/')
                        | Pechtold
                        div
                            | Architekten
                nav
                    +menu(menu())
            footer
                != partial('address')
        .border
        //if secondMenu().length
        //    nav.second
        //        +menu(secondMenu())
        .article
            article
                block content

    != getBlock('scripts').toHTML()