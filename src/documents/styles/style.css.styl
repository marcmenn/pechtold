@import url('http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600');

@require 'normalize.inc.styl'
@require 'polyfills.inc.styl'

$TEXT_COLOR = #666666
$TEXT_COLOR_SECUNDARY = #999999
$NAV1_CURRENT_COLOR = #333333
$NAV1_CURRENT_BACKGROUND = #e8e8e8
$NAV1_CURRENT_BORDER = #6685a3
$TEXT_COLOR_NEGATIVE = #ffffff
$NAV2_BACKGROUND = $NAV1_CURRENT_BACKGROUND

debug(amount)

open-sans()
  font-family: 'Open Sans', sans-serif
  font-style: normal
  font-weight: 400

open-sans-semibold()
  font-family: 'Open Sans', sans-serif
  font-style: normal
  font-weight: 600

html
body
  padding: 0
  margin: 0
  open-sans()
  display flex
  align-items stretch
  width 100%

/* Navigation generell */
nav
  ul
    padding: 0
    margin: 0

    li
      display: block
      list-style: none
      padding: 0
      margin: 0

/* Linke Spalte */

aside
  debug(0)
  display flex
  flex none
  flex-flow column nowrap
  align-self flex-start
  min-height: 100%
  padding-left 1.5em
  padding-right 1.5em

  /* Headline */

  > div
    flex 1 1 auto
    width: 16em /* Depend on Logo */
    padding: 5em 0 3em 0

  header
    debug(2)
    open-sans-semibold()
    margin-bottom: 1em
    text-align: center
    font-size: 2.75em
    line-height: 0.7em
    letter-spacing: 0.08em
    text-transform: uppercase

    a
      color: $NAV1_CURRENT_BORDER
      text-decoration: none

      /* Subline */

      div
        debug(3)
        open-sans-semibold()
        font-size: 0.33em
        font-weight: 200
        letter-spacing: 0.02em
        text-transform: uppercase
        color: $TEXT_COLOR
      span
        background-color: $NAV1_CURRENT_BORDER
        padding-left: 0.15 em
        padding-right: 0.15em
        margin-left: 0.15em
        margin-right: 0.15em
        color: $TEXT_COLOR_NEGATIVE

      
  /* Hauptnavigation */
  
  nav
    debug(3)

    ul
      li
        > div a
          open-sans()
          text-decoration: none
          font-size: 1em
          line-height: 2.5em
          color: $TEXT_COLOR
          z-index: 1
        
          /*&.hasChildren > div a:after */
          /*content: ' â€º' */

        &.parent > div
        &.current > div
          color: $NAV1_CURRENT_COLOR
          background-color: $NAV1_CURRENT_BACKGROUND
          border-left: 0.5em solid $NAV1_CURRENT_BORDER
          margin-left: -1.5em
          margin-right: -1.5em
          padding-left: 1em

          a
            color: $NAV1_CURRENT_COLOR

  /* Footer */
  
  footer
    flex 0 0 auto
    debug(4)
    font-size: 0.8em
    color: $TEXT_COLOR

div.border
  flex none
  box-shadow 2px 0 2px 0 rgba(119,119,119,0.5) inset
  width 3px
  margin-right -3px
  position relative

/* Zweite Navigation */
nav.second
  flex none
  background-color: $NAV2_BACKGROUND
  max-width: 6em
  padding: 11.5em 1.5em 3em 1.5em

  ul
  li
    > div a
      open-sans()
      text-decoration: none
      font-size: 0.8em
      line-height: 1.25em
      color: $TEXT_COLOR

    > div
      padding: 0.25em 0

    &.current > div
      border-left: 0.5em solid $NAV1_CURRENT_BORDER
      margin-right: -1.5em
      margin-left: -1.5em
      padding-left: 1em

      a
        color: $NAV1_CURRENT_COLOR

/* Content */
div.article
  flex 1 1 auto
  height 100%
  overflow auto
  padding-bottom: 4em

article
  padding: 2em 1.5em 3em 1.5em
  color: $TEXT_COLOR

/* Home Image */
body.home
  aside
    margin-right 0
  article
    padding 0

    img
      width 100%
      opacity 0.7

/* Project Images */
.page .images
  height 20em
  overflow scroll
  overflow-y hidden
  white-space nowrap

  img
    vertical-align top
    width: 100%

/* Content */

h1
  font-size: 2em
  color: $TEXT_COLOR_SECUNDARY
  font-weight: 200
  padding-top: 1.5em

a
  text-decoration: none
  color: $NAV1_CURRENT_BORDER

/* Google Map */

#gmap
  overflow hidden
  position relative
  height 20em
  width 100%
  margin-bottom: 4em

  > div
    width 100%
    height 100%
    position relative

    img
      max-width: none !important
      background: none !important
