@import url('http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600');
@import 'normalize.css.styl'

$TEXT_COLOR = #666666
$NAV1_CURRENT_COLOR = #333333
$NAV1_CURRENT_BACKGROUND = #e8e8e8
$NAV1_CURRENT_BORDER = #6685a3

$DEBUG_COLOR = yellow

debug(amount)
  background-color: lighten(yellow, amount * 20%)

open-sans()
  font-family: 'Open Sans', sans-serif
  font-style: normal
  font-weight: 400

open-sans-semibold()
  font-family: 'Open Sans', sans-serif
  font-style: normal
  font-weight: 600

html
body
  padding: 0
  margin: 0
  open-sans()
  
/* Linke Spalte */

.navigation
  position: relative
  float: left
  height: 100%
  width: 21em
  padding: 0.5em 1em
  debug(0)
  
  /* Headline */
  
  h1
    debug(2)
    open-sans-semibold()
    font-size: (46/12) em
    text-transform: uppercase
    text-align: center
    
    /* Subline */

    div
      debug(3)
      font-size: (12/46) em
      text-transform: uppercase
      
  /* Hauptnavigation */
  
  nav
    debug(3)
    ul
      padding: 0
      margin: 0
      
      li
        display: block
        list-style: none
        padding: 0
        margin: 0
        
        > a
          text-decoration: none
          color: $TEXT_COLOR
        
        &.hasChildren > a:after
          content: 'Ë…'
          
        &.current
          color: $NAV1_CURRENT_COLOR
          background-color: $NAV1_CURRENT_BACKGROUND
          border-left: 0.5em solid $NAV1_CURRENT_BORDER
          
        li
          padding-left: 1em
      
  /* Footer */
  
  address
    debug(4)
    position: absolute
    bottom: 0