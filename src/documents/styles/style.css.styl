@import url('http://fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600');
@import 'normalize.css.styl'

$TEXT_COLOR = #666666
$TEXT_COLOR_SECUNDARY = #999999
$NAV1_CURRENT_COLOR = #333333
$NAV1_CURRENT_BACKGROUND = #e8e8e8
$NAV1_CURRENT_BORDER = #6685a3

$DEBUG_COLOR = #ffffff

debug(amount)
  -debug-background-color: lighten(#ffffff, amount * 20%)

open-sans()
  font-family: 'Open Sans', sans-serif
  font-style: normal
  font-weight: 400

open-sans-semibold()
  font-family: 'Open Sans', sans-serif
  font-style: normal
  font-weight: 600

display-flex()
  display: -webkit-flex
  display: -ms-flex
  display: flex

flex(args)
  -webkit-flex: args
  -ms-flex: args
  flex: args

flex-flow(args)
  -webkit-flex-flow: args
  -ms-flex-flow: args
  flex-flow: args

align-self(args)
  -webkit-align-self: args
  -ms-align-self: args
  align-self: args


highlight(level)
  color: $NAV1_CURRENT_COLOR
  background-color: $NAV1_CURRENT_BACKGROUND
  border-left: 0.5em solid $NAV1_CURRENT_BORDER
  margin-left: -1.5em
  margin-right: -1.5em
  padding-left: 1em

html
body
  padding: 0
  margin: 0
  open-sans()
  display-flex()
  
/* Linke Spalte */

aside
  debug(0)
  flex(none)
  display-flex()
  flex-flow(column nowrap)
  align-self(flex-start)
  min-height: 100%
  width: 16em /* Depend on Logo */
  padding: 5em 1.5em 3em 1.5em
  margin-right: 1.5em
  -webkit-box-shadow: 0 0 2px 2px rgba(119,119,119,0.30)

  /* Headline */
  
  header
    flex(none)
    debug(2)
    open-sans-semibold()
    margin-bottom: 1em
    color: $NAV1_CURRENT_BORDER
    font-size: 2.75em
    line-height: 0.7em
    letter-spacing: 0.08em
    text-transform: uppercase
    text-align: center
    
    /* Subline */

    div
      debug(3)
      open-sans-semibold()
      font-size: 0.3em
      font-weight: 200
      letter-spacing: 0.02em
      text-transform: uppercase
      color: $TEXT_COLOR
      
  /* Hauptnavigation */
  
  nav
    debug(3)
    flex(auto)

    ul
      padding: 0
      margin:0
      
      li
        display: block
        list-style: none
        padding: 0
        margin: 0

        > div a
          open-sans()
          text-decoration: none
          font-size: 1em
          line-height: 2.5em
          color: $TEXT_COLOR
          z-index: 1
        
        &.hasChildren > div a:after
          content: ' >'
          
        &.current > div
          highlight(0)

        li
          padding: 0

          &.current > div
            highlight(1)
      
  /* Footer */
  
  footer
    flex(none)
    debug(4)
    font-size: 0.8em
    color: $TEXT_COLOR

/* Content */
article
  flex(auto)
  debug(2)
  -aus-padding: 5em 1.5em 3em 1.5em
  color: $TEXT_COLOR